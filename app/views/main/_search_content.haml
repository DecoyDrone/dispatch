- if @search_results.present?
  .row-fluid
    .span12
      .search_content
        - p = @search_results
        .media.media-main{id: "perp-#{p.name}" }
          %a{class: "pull-left", href: "/perpetrators/#{p.id}/reports"}
            %img{class: "media-object", src: "https://minotar.net/avatar/#{p.name}/100"}
          .media-body
            .media-body-main
              .indicator
                %p Status
              %h4{class: "media-heading"}= p.name
              %ul.unstyled.main
                %li Current max bounty: #{p.max_bounty}d
                %li
                  .span3
                    Number of Reports: #{p.record_count}
                  .span6
                    %p.main-timestamp= "...last reported #{time_ago_in_words(p.last_reported_at)} ago"
